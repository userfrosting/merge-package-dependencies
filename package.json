{
    "name": "@userfrosting/merge-package-dependencies",
    "version": "1.2.1",
    "description": "Merge NPM, Yarn or Bower package dependencies into one package, with semver rules respected.",
    "funding": "https://opencollective.com/userfrosting",
    "repository": "github:userfrosting/merge-package-dependencies",
    "type": "commonjs",
    "main": "./dist/index.js",
    "exports": {
        "require": "./dist/index.js",
        "import": "./dist/main.js"
    },
    "types": "./dist/main.d.ts",
    "scripts": {
        "pretest": "tsc && api-extractor run --local",
        "test": "nyc --reporter=text ava",
        "prepublishOnly": "tsc",
        "preversion": "npm test",
        "version": "npm run version:apiDocRefresh && npm run version:changelogBump",
        "postversion": "git push && git push --tags",
        "version:changelogBump": "changelog-updater && git add CHANGELOG.md",
        "version:apiDocRefresh": "api-extractor run && api-documenter markdown -i ./temp -o ./docs/api && git add ./docs/api/*"
    },
    "author": "Jordan Mele <SiliconSoldier@outlook.com.au> (https://djmm.me/)",
    "keywords": [
        "package.json",
        "bower.json",
        "merge",
        "npm",
        "yarn",
        "bower"
    ],
    "license": "MIT",
    "dependencies": {
        "@yarnpkg/lockfile": "^1.1.0",
        "chalk": "^4.0.0",
        "esm": "^3.2.25",
        "fs-extra": "^7.0.1",
        "lodash": "^4.17.11",
        "node-exceptions": "^4.0.1",
        "package-json-validator": "0.6.3",
        "semver-intersect": "^1.4.0",
        "semver": "^5.6.0"
    },
    "devDependencies": {
        "@microsoft/api-documenter": "^7.7.18",
        "@microsoft/api-extractor": "^7.7.13",
        "@types/fs-extra": "^8.1.0",
        "@types/lodash": "^4.14.150",
        "@types/node": "^13.13.1",
        "@types/semver": "^7.1.0",
        "@types/vinyl": "^2.0.4",
        "@types/yarnpkg__lockfile": "^1.1.3",
        "ava": "^3.7.1",
        "changelog-updater": "^1.1.0",
        "nyc": "^15.0.1",
        "p-defer": "^3.0.0",
        "sort-on": "^4.1.0",
        "typescript": "^3.8.3"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "ava": {
        "files": [
            "dist/**/*.test.js"
        ],
        "require": [
            "esm"
        ]
    }
}
