{
    "name": "@userfrosting/merge-package-dependencies",
    "version": "2.1.0",
    "description": "Merge NPM, Yarn or Bower package dependencies into one package, with semver rules respected.",
    "funding": "https://opencollective.com/userfrosting",
    "type": "commonjs",
    "main": "./dist/index.js",
    "exports": {
        "require": "./dist/index.js",
        "import": "./dist/main.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/userfrosting/merge-package-dependencies"
    },
    "bugs": {
        "url": "https://github.com/userfrosting/merge-package-dependencies/issues"
    },
    "types": "./dist/main.d.ts",
    "scripts": {
        "aeCheck": "api-extractor run",
        "aeUpdate": "api-extractor run --local",
        "purgeDocs": "del-cli ./docs/api/",
        "adUpdate": "npm run purgeDocs && api-documenter markdown -i ./temp -o ./docs/api",
        "build": "is-ci && npm run build:release || npm run build:dev",
        "build:dev": "tsc && npm run aeUpdate && npm run adUpdate",
        "build:release": "tsc && npm run aeCheck",
        "pretest": "npm run build",
        "test": "is-ci && ava || nyc --reporter=text ava",
        "prepublishOnly": "npm run build:release && ava",
        "version": "changelog-updater && git add CHANGELOG.md",
        "postversion": "git push && git push --tags"
    },
    "author": "Jordan Mele <SiliconSoldier@outlook.com.au> (https://djmm.me/)",
    "keywords": [
        "package.json",
        "bower.json",
        "merge",
        "npm",
        "yarn",
        "bower"
    ],
    "license": "MIT",
    "dependencies": {
        "@yarnpkg/lockfile": "^1.1.0",
        "chalk": "^4.0.0",
        "esm": "^3.2.25",
        "fs-extra": "^9.0.0",
        "lodash": "^4.17.15",
        "node-exceptions": "^4.0.1",
        "package-json-validator": "0.6.3",
        "semver": "^7.3.2",
        "semver-intersect": "^1.4.0",
        "ts-log": "^2.1.4"
    },
    "devDependencies": {
        "@microsoft/api-documenter": "^7.7.19",
        "@microsoft/api-extractor": "^7.7.13",
        "@types/fs-extra": "^8.1.0",
        "@types/lodash": "^4.14.150",
        "@types/node": "^13.13.2",
        "@types/semver": "^7.1.0",
        "@types/yarnpkg__lockfile": "^1.1.3",
        "ava": "^3.7.1",
        "changelog-updater": "^1.1.0",
        "del-cli": "^3.0.0",
        "is-ci": "^2.0.0",
        "nyc": "^15.0.1",
        "typescript": "^3.8.3"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "ava": {
        "files": [
            "dist/**/*.test.js"
        ],
        "require": [
            "esm"
        ]
    }
}
